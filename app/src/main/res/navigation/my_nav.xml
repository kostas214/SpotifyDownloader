<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/playListFragment">

    <fragment
        android:id="@+id/playListFragment"
        android:name="com.example.spotifydownloader.playListFragment"
        android:label="fragment_play_list"
        tools:layout="@layout/fragment_play_list" >
        <action
            android:id="@+id/action_playListFragment_to_downloadFragment"
            app:destination="@id/downloadFragment"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>
    </fragment>
    <fragment
        android:id="@+id/albumFragment"
        android:name="com.example.spotifydownloader.albumFragment"
        android:label="fragment_album"
        tools:layout="@layout/fragment_album" >
        <action
            android:id="@+id/action_albumFragment_to_downloadFragment"
            app:destination="@id/downloadFragment"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>
    </fragment>
    <fragment
        android:id="@+id/songFragment"
        android:name="com.example.spotifydownloader.SongFragment"
        android:label="fragment_song"
        tools:layout="@layout/fragment_song" >

    </fragment>
    <fragment
        android:id="@+id/downloadFragment"
        android:name="com.example.spotifydownloader.downloadFragment"
        android:label="fragment_download"
        tools:layout="@layout/fragment_download" >

        <argument
            android:name="Data"
            app:argType="com.example.spotifydownloader.model.Data" />
    </fragment>
</navigation>